$( document ).ready(function() {
  displayModal();
  launchIconModal();
});

function displayModal() {
  if (window.location.pathname === '/') {
    $('#welcome-modal.modal').modal('show');
  }
}

function launchIconModal() {
  $('li.badge-icon a').on('click', function (e) {
    e.preventDefault();
    $(".images-from-icons div").addClass('hidden');
    var titleText = $(e.currentTarget).data('value');
    $('h4#bone-pics-modal').text(titleText);
    $(".images-from-icons div." + titleText.toLowerCase()).removeClass('hidden');
    $('#bone-pics').modal("show");
  });
}

